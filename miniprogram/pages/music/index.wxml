<scroll-view scroll-y>
  <view class="music-view">
    <!-- 首页占位搜索框，只有样式，点击跳转到搜索页进行搜索 -->
    <van-search shape="round" disabled placeholder="搜索" use-left-icon-slot background="transparent" custom-class="custom-search" bind:tap="handleSearchClick">
      <van-icon slot="left-icon" class-prefix="icon" name="search" class="iconfont van-cell__left-icon-wrap" />
    </van-search>

    <!-- 轮播图 -->
    <swiper class="swiper" autoplay indicator-dots circular style="height: {{swiperHeight}}px;">
      <block wx:for="{{banners}}" wx:key="bannerId">
        <swiper-item class="swiper-item">
          <image src="{{item.pic}}" mode="widthFix" lazy-load class="swiper-image" bindload="handleSwiperImageLoaded"></image>
          <view class="banner-type-title">{{item.typeTitle}}</view>
        </swiper-item>
      </block>
    </swiper>

    <!-- 热门歌单 -->
    <area title="热门歌单">
    <scroll-view scroll-x class="custom-scroll-view">
      <view class="scroll-x-content">
        <playlist-item wx:for="{{playlists}}" wx:key="id" class="playlist-item" playlist="{{ item }}"></playlist-item>
      </view>
    </scroll-view>
    </area>

    <!-- 巅峰榜 -->
    <area title="巅峰榜" has-more="{{ false }}">
    <view class="ranking-list">
      <view class="ranking-item">
        <view class="left">
          <view class="ranking-title">飙升榜</view>
          <view class="ranking-info">
            <text class="serial">1.</text>
            <text class="name">谁不想</text>
            <text class="split">-</text>
            <text class="artist">林宥嘉</text>
          </view>
          <view class="ranking-info">
            <text class="serial">2.</text>
            <text class="name">谁不想谁不想谁不想谁不想谁不想谁不想谁不想</text>
            <text class="split">-</text>
            <text class="artist">林宥嘉</text>
          </view>
          <view class="ranking-info">
            <text class="serial">3.</text>
            <text class="name">谁不想</text>
            <text class="split">-</text>
            <text class="artist">林宥嘉</text>
          </view>
        </view>
        <view class="right">
          <image src="http://p2.music.126.net/Oyg6Ys6iCrUsp3lWJw4DVQ==/109951169199634685.jpg" mode="heightFix" class="image" />
          <view class="play-counter">
            <van-icon class-prefix="icon" name="play" class="iconfont" />
            <!-- {{ format.formatCount(playlist.playCount) }} -->
            6000万
          </view>
        </view>
      </view>
    </view>
    </area>
  </view>
</scroll-view>